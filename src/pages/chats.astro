---
import * as Plot from "@observablehq/plot";
import Header from "../components/Header.astro";
import PlotFigure from "../components/PlotFigure.astro";
import cats from "../assets/cats.json"; // Ton fichier JSON avec les donn√©es des chats
---
<Header />

<main>
  <h1>Chats</h1>
  <PlotFigure
    options={{
      marks: [
        Plot.dot(cats, {
          x: "poids_kg",
          y: "race",
          fill: "couleur",
          r: 4
        })
      ],
      width: 800,
      height: 400,
      x: { label: "Poids (kg)" },
      y: { label: "Race" },
      color: { legend: true, label: "Couleur du pelage" }
    }}
  />
</main>
